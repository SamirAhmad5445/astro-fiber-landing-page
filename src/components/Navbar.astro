---
import Button from "../components/Button.astro";
const navLinks = [
  { href: "#community", name: "Community" },
  { href: "#pricing", name: "Pricing" },
  { href: "#features", name: "Features" },
];
---

<nav id="primaryNavigation" class="flex items-center">
  <a href="/" class="basis-1/3 font-bold text-xl text-neutral-900"> Fiber</a>
  <div class="basis-2/3 flex items-center justify-between">
    <ul class="flex gap-8 ml-6">
      {
        navLinks.map((link) => (
          <li>
            <a
              href={link.href}
              class="inline-block hover:text-primary-400 transition-effect"
            >
              {link.name}
            </a>
          </li>
        ))
      }
    </ul>
    <div class="flex gap-11">
      <button class="text-neutral-900 font-bold">Sign In</button>
      <Button content="Sign Up" />
    </div>
  </div>
</nav>
