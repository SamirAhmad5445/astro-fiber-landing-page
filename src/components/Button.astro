---
export interface Props {
  content: string;
  type?: "primary" | "neutral";
  isLink?: boolean;
  href?: string;
}

const { content, type = "primary", isLink = false, href} = Astro.props;

const Tag = isLink ? "a" : "button";
---

<Tag
  href={href}
  class={`text-neutral-100
  border
  font-bold
  ${
    type === "primary"
      ? "bg-primary-400 hover:bg-primary-500 border-primary-400"
      : "text-primary-500 bg-neutral-100 hover:bg-neutral-300 border-neutral-400"
  }
  px-8 py-4
  rounded-md
  transition-effect`}
>
  {content}
</Tag>
